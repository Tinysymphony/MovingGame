<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/back"
        >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/relativeLayout">
        <ImageView
                android:id="@+id/title"
                android:background="@drawable/t_choose_stage"
                android:layout_width="fill_parent" android:layout_height="80dp"
                />
    </RelativeLayout>
    <Button
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:id="@+id/button1"
            android:background="@drawable/locked"
            android:layout_marginTop="45dp" android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:id="@+id/button2"
            android:background="@drawable/locked"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/button1"
            android:layout_alignEnd="@+id/button1"/>
    <Button
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:background="@drawable/locked"
            android:id="@+id/button3"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/button2"
            android:layout_alignEnd="@+id/button2"/>
    <Button
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:background="@drawable/locked"
            android:id="@+id/button4"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/button3"
            android:layout_alignEnd="@+id/button3"/>
    <Button
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:background="@drawable/locked"
            android:id="@+id/button5"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/button4"
            android:layout_alignEnd="@+id/button4"/>
    <Button
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:background="@drawable/locked"
            android:id="@+id/button6"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/button5"
            android:layout_alignEnd="@+id/button5"/>


</RelativeLayout>