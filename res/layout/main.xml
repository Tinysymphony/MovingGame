<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <Button
            style="@style/Button"
            android:text="New Button"
            android:id="@+id/button1"
            android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_alignParentTop="true" android:layout_alignStart="@+id/button2"
             android:layout_marginTop="45dp"/>
    <Button
            style="@style/Button"
            android:text="New Button"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/button1" android:layout_centerHorizontal="true" android:layout_marginTop="45dp"/>

    <Button style="@style/Button" android:text="New Button"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="45dp" android:layout_below="@+id/button2"
            android:layout_alignStart="@+id/button2"/>

    <Button style="@style/Button" android:text="New Button"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="45dp" android:layout_below="@+id/button3" android:layout_alignEnd="@+id/button3"/>

    <Button style="@style/Button" android:text="New Button"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="45dp" android:layout_below="@+id/button4" android:layout_alignEnd="@+id/button4"/>
</RelativeLayout>