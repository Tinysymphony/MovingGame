<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/back"
        >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/relativeLayout">
        <ImageView
                android:id="@+id/title"
                android:background="@drawable/t_about_us"
                android:layout_width="fill_parent" android:layout_height="80dp"
                />
    </RelativeLayout>

    <ListView
            android:id="@+id/main_list"
            android:stackFromBottom="true"
            android:cacheColorHint="#00000000"
            android:transcriptMode="alwaysScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/info1"
            android:id="@+id/imageView" android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>